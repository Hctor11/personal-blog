---
import '../styles/styles.sass'
import ENTRIES from '../util/entries';
import TAGS from './../util/TAGS';
import Component from "../components/Component";
import TagsSearch from "../components/TagsSearch";
import FooterRes from '../components/Footer';
import Nav from '../components/Nav';

const RECENT_ENTRIES = ENTRIES.slice(ENTRIES.length - 4,ENTRIES.length).reverse()
---
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/iso.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Blog</title>
	</head>
	<body>
		<Nav/>
		<header>
			<div class="main-title" id="main-title">
				<h1>HÃ©ctor Rivera personal blog</h1>
				<p>Blog to talk about the things that I like.</p>
			</div>

			<h3 style="font-weight: 400; margin-bottom: 5px">//Recent entries<h3>
			<div class="recent-entries-container">
				{RECENT_ENTRIES.map(({title, description, url,img,date,tag},id) => (
					<div class=`recent-entry-${id} recent-entry` 
						style=`
							background-image: linear-gradient(270deg, rgba(0, 0, 0, 0.6) , rgba(0, 0, 0, 1)), url(${img}); 
							background-size: cover;`
					>
						<a href={url}>
							<h3>{title}</h3>
							<p>{description}</p>
							<span class='date-entry'>{date}</span>
							<span 
								class='tag-entry' 
								style=`
									background-color: 
										${tag == TAGS[0] ? '#347aeb' : 
											tag == TAGS[1] ? '#eb34e5' : 
												tag == TAGS[2] ? '#009930' : 
													tag == TAGS[3] ? '#eb5f34' : 
														tag == TAGS[4] ? '#6234eb' : '#383838'}`>
								{tag}
							</span>
						</a>
					</div>
				))}				
			</div>
		</header>
		<Component></Component>
		<TagsSearch client:load/>
		<FooterRes/>
	</body>
</html>